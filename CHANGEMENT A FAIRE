def cr√©ation_bouton(texte,couleur_texte,x,y,largeur,longueur,couleur_rect):
    font = pygame.font.SysFont('KAZYcase scrabble', 25)

    text = font.render(texte, True, couleur_texte)

    rect = pygame.Rect(x, y, largeur, longueur)

    pygame.draw.rect(fenetre, couleur_rect, rect)

    fenetre.blit(text, text.get_rect(center = rect.center))

